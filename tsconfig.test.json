{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "noEmit": true
  },
  "include": ["tests/*.spec.ts"]
}
